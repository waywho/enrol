<!DOCTYPE html>
<html>
<head>
  <title>Enrol</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<body>
<br />

<div class = 'col-xs-offset-1 col-xs-8'>
	<ul class="nav nav-tabs">
	  <li role="presentation" class="<%= 'active' if params[:controller] == 'static_pages' %>"><%= link_to 'Audition Club', root_path %></li>
	  <li role="presentation" class="<%= 'active' if params[:controller] == 'courses' %>"><%= link_to 'Sessions', courses_path %></li>
	  <li role="presentation" class="<%= 'active' if params[:controller] == 'carts' %>">
	  <% if @cart.present? %>
	  	<%= link_to 'Cart', cart_path(@cart) %></li>
	  	<% end %>
	  <% if user_signed_in? %>
	  	<li role="presentation" class="dropdown">
	  		<a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
      			<span class="caret"></span>
    		</a>
		  	<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
		  		<li><%= link_to 'My Dashboard', dashboard_path %></li>
		  		<li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
		  	</ul>
		</li>
	 <% else %>
	 	<li role="presentation" class="<%= 'active' if params[:controller] == 'devise/sessions' %>"><%= link_to 'Sign In', new_user_session_path %></li>
	  	<li role="presentation" class="<%= 'active' if params[:controller] == 'devise/registrations' %>"><%= link_to 'Sign Up', new_user_registration_path %></li>

	 <% end %>
	</ul>
</div>
<div class = 'home-page col-xs-offset-1 col-xs-10'>
	<br />

	<% if notice.present? %>
	<p class="alert alert-info"><%= notice %></p>
	<% end %>

	<% if alert.present? %>
	<p class="alert alert-danger"><%= alert %></p>
	<% end %>
	<br />
	<br />

	<% if params[:controller] == 'static_pages' %>
		<div class = 'col-xs-12 col-md-3 pull-right'>
		<br />
		<br />
		<%= link_to root_path do %>
			<div class = 'side-link'>
				<h5>Home</h5>
			</div>
		<% end %>
		<%= link_to about_path do %>
			<div class = 'side-link'>
				<h5>About</h5>
			</div>
		<% end %>
		<%= link_to faq_path do %>
			<div class = 'side-link'>
				<h5>F.A.Q.</h5>
			</div>
		<% end %>
		</div>
	<% end %>

	<%= yield %>
	<br class = 'clr' />
	<br />
	<br />
</div>
</body>
</html>
